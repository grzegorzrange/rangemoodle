<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/financial/db" VERSION="2026021400" COMMENT="XMLDB file for local_financial plugin."
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_financial" COMMENT="Financial matters linked to directions.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Financial matter title."/>
        <FIELD NAME="message" TYPE="text" NOTNULL="true" COMMENT="Financial matter body (HTML)."/>
        <FIELD NAME="messageformat" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="1" COMMENT="Text format for message field."/>
        <FIELD NAME="directionid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Linked direction ID."/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="usercreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="usermodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="directionid_fk" TYPE="foreign" FIELDS="directionid" REFTABLE="local_recruitment_course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_financial_notify_hist" COMMENT="Notification history for financial matters.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="financialid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Financial matter ID."/>
        <FIELD NAME="usercreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Admin who sent the notification."/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="When notification was sent."/>
        <FIELD NAME="recipientcount" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Number of recipients."/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="financialid_fk" TYPE="foreign" FIELDS="financialid" REFTABLE="local_financial" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
