<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/dashboard/db" VERSION="2026022100" COMMENT="XMLDB file for local_dashboard plugin."
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_dashboard_announce" COMMENT="Dashboard announcements for recruitments.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Announcement title."/>
        <FIELD NAME="message" TYPE="text" NOTNULL="true" COMMENT="Announcement body (HTML)."/>
        <FIELD NAME="messageformat" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="1" COMMENT="Text format for message field."/>
        <FIELD NAME="directionid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" COMMENT="Linked direction ID (local_recruitment_course)."/>
        <FIELD NAME="notificationsent" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" COMMENT="Whether notification email was sent."/>
        <FIELD NAME="notificationsenttime" TYPE="int" LENGTH="10" NOTNULL="false" COMMENT="Timestamp when notification was sent."/>
        <FIELD NAME="visible" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" COMMENT="Whether the announcement is visible to users."/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="usercreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="usermodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="directionid_fk" TYPE="foreign" FIELDS="directionid" REFTABLE="local_recruitment_course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
